{
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "my-app/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
    "prettier --write",
    "git add"
    ],
    "server/**/*.js": [
    "prettier --write",
    "git add"
    ]
  }
}
